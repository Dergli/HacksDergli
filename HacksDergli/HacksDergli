	then
	echo 1.- FonYou
	echo 2.- Yuilop
	echo 3.- UppTalk
		read VAR
		clear
		if [ "$VAR" = "1" ]
		then
		firefox -new-window http://www.fonyou.es/ &
		elif [ "$VAR" = "2" ]
		then
		firefox -new-window http://yuilop.com/es/ &
